<% include ../includes/head %>
<% include ../includes/header %>
<div class="container-fluid">
    <div class="row-fluid">
        <% include ../includes/sidebar %>
        <div class="span9">
            <div class="row-fluid">
                <div class="box span12">
                    <div class="box-header well">
                        <h2><i class="icon-info-sign"></i>博客管理</h2>

                        <div class="box-icon">
                            <a href="/admin/new_blog" class="btn btn-setting btn-round">新增博客<i class="icon-cog"></i></a>
                            <!--<a href="#" class="btn btn-minimize btn-round"><i class="icon-chevron-up"></i></a>-->
                            <!--<a href="#" class="btn btn-close btn-round"><i class="icon-remove"></i></a>-->
                        </div>
                    </div>
                    <div class="box-content">
                        <table class="table table-striped table-bordered bootstrap-datatable datatable">
                            <thead>
                            <tr>
                                <th>标题</th>
                                <th>简介</th>
                                <th>发布日期</th>
                                <th>操作</th>
                            </tr>
                            </thead>
                            <tbody>
                            <% blogs.forEach(function(blog, index) {%>
                            <tr>
                                <td><%=blog.title%></td>
                                <td><%=blog.introduction%></td>
                                <td class="center">
                                    <span><%=locals.formatDate(blog.created_at)%></span>
                                </td>
                                <td class="center">
                                    <a class="btn btn-success" href="#">
                                        <i class="icon-zoom-in icon-white"></i>
                                        查看
                                    </a>
                                    <a class="btn btn-info" href="#">
                                        <i class="icon-edit icon-white"></i>
                                        修改
                                    </a>
                                    <a class="btn btn-danger" href="/admin/blog_delete/<%=blog.id%>">
                                        <i class="icon-trash icon-white"></i>
                                        删除
                                    </a>
                                </td>
                            </tr>
                            <% }) %>

                            </tbody>
                        </table>
                        <div class="clearfix"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <% include ../includes/footer %>
</div>